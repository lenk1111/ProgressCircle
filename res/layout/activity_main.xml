<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white"
    android:orientation="vertical">

	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="2"
	    android:background="#ebebeb">

	    <FrameLayout
        android:layout_width="205dp"
         android:layout_marginTop="30dp"
         android:layout_marginBottom="30dp"
        android:layout_height="205dp"
         android:layout_centerInParent="true"
           >
	 		<com.example.progresscircle.view.CircleProgressBar
	            android:id="@+id/circleProgressBar"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent" />
	        <RelativeLayout
	            android:id="@+id/relativeLayout1"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:clickable="true"
	            android:gravity="center"
	             >
	            <!-- android:background="@drawable/progress_circle_bg" -->
	            <TextView
	                android:id="@+id/stepText"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerHorizontal="true"
	                android:text="当前"
	                android:textColor="@color/gray" />
	            <TextView
	                android:id="@+id/numberText"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_below="@+id/stepText"
	                android:layout_centerHorizontal="true"
	                android:textSize="30sp"
	                android:textStyle="bold" />
	            <TextView
	                android:id="@+id/maxText"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_below="@+id/numberText"
	                android:layout_centerHorizontal="true"
	                android:textColor="@color/gray"
	                android:text="总共  " />
	        </RelativeLayout>
    	</FrameLayout>
	    
	</RelativeLayout>
    
   <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="3"
	    android:background="#454545"></RelativeLayout>
</LinearLayout>